<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.eseffair.consultapontoeletronico"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" 
        android:configChanges="orientation" android:screenOrientation="user">
        <activity
            android:name=".ConsultaPontoActivity"
            android:label="@string/title_activity_consulta_ponto" 
            android:configChanges="orientation" 
            android:screenOrientation="user">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ResultadoConsultaPontoActivity"
            android:label="@string/title_activity_resultado_consulta_ponto" 
            android:configChanges="orientation" 
            android:screenOrientation="user">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>